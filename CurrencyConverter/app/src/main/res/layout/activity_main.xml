<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:text=" From :"
        android:textSize="25dp" />

    <Spinner
        android:id="@+id/sp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2"
        android:layout_marginLeft="10dp"
        android:popupBackground="@android:color/holo_orange_light"
        android:background="@android:color/holo_blue_light"
        android:layout_marginTop="14dp"

       ></Spinner>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"

        android:text="Amount :"

        android:textSize="25dp" />
    <EditText
        android:id="@+id/ed1"
        android:layout_below="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="25dp"
        android:inputType="number"

        />
    <TextView
        android:id="@+id/tv4"
        android:layout_below="@+id/ed1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To :"
        android:layout_marginLeft="10dp"

        android:textSize="25dp"

        />
    <Spinner
        android:id="@+id/sp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv4"
        android:layout_marginLeft="10dp"
        android:popupBackground="@android:color/holo_orange_light"
        android:background="@android:color/holo_blue_light"
        android:layout_marginTop="14dp"

        ></Spinner>

    <Button
        android:id="@+id/bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt1"

        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:text="Clear" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt2"

        android:layout_marginLeft="58dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/bt3"

        android:text="Swap" />
    />

    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sp2"

        android:layout_marginLeft="64dp"

        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/bt1"
        android:text="Convert" />


    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="37dp"
        android:text="Result"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/tv5"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"
        android:textSize="30dp" />




</RelativeLayout>